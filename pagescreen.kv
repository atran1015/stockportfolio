##########################################3
PageManager:
    
    LoginPage:
    HomePage:
    
<LoginPage>:
    name:"loginpage"

    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
           
    MDLabel:
        id: home
        text: "Welcome!"
        font_size: 15
        halign: 'center'
        size_hint_y: None
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        height: self.texture_size[1]
        padding_y: 15
    
    MDLabel:
        id: usernameHeading
        text: "Username: "
        font_size: 12
        halign: 'left'
        size_hint_y: None
        pos_hint: {"center_x": 0, "center_y": 0}
        height: self.texture_size[1]
        padding_y: 15
        
    MDTextFieldRound:
        id: user
        hint_text: "username"
        icon_right: "account"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    
    MDRoundFlatButton:
        text: "LOG IN"
        font_size: 12
        pos_hint: {"center_x": 0.5,"center_y": 0.5}
        on_press: 
            root.validate()
            #app.root.current = "homepage"
            root.manager.transition.direction ="left"
            
              
    Image:
        source:'images/Logo.png'
        size_hint_x: None
        allow_stretch: True
        pos_hint: {"center_x": 0.5, "center_y": 0.81}

<P>:
    Label:
        text : "Username does not exist."
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.8}

<HomePage>:

    name:"homepage"
    availablelist: availablelist
    
    MDTextField:
        id: stock
        hint_text: "Please Input A Stock"
        # icon_right: "account"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.1, "center_y": 0.9}

    MDIconButton:
        pos_hint: {"center_x": 0.4, "center_y": 0.9}
        icon: 'magnify'
        on_press: root.fetchData(root.ids.stock.text)
    
    MDLabel:
        text: "WatchList"
        pos_hint: {"center_x": 1, "center_y": 0.9}

     #grid with all the tables to display
    MDGridLayout:
        id:availablelist
        cols:2
        #size_hint_x:None
        size_hint_y:None
        height:490
        top: 600
        padding:'10dp' 
    
    MDRoundFlatButton:
        text: "Add to WatchList"
        font_size: 12
        pos_hint: {"center_x": 0.2,"center_y": 0.2}
        on_press: root.addToWatchList()